<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        tools:src="@mipmap/placeholder_img" />

    <RatingBar
        android:id="@+id/rbRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        tools:rating="3.4"
        android:layout_below="@+id/ivPoster"
        android:layout_alignStart="@+id/ivPoster"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ivPoster"
        android:text="TextView"
        tools:text="It"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/tvReleaseDate"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvMovieTitle"
        android:layout_below="@+id/tvMovieTitle"
        android:text="TextView"
        tools:text="2017-09-05"
        android:textColor="@color/colorPrimaryText"/>

    <TextView
        android:id="@+id/tvSynopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignStart="@+id/tvReleaseDate"
        android:layout_below="@+id/tvReleaseDate"
        android:textColor="@color/colorPrimaryText"
        android:text="TextView"
        tools:text="In a small town in Maine, seven children known as The Losers Club come face to face with life problems, bullies and a monster that takes the shape of a clown called Pennywise" />

</RelativeLayout>